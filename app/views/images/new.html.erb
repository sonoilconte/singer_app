<%= render 'shared/menu' %>
<%= render 'shared/current_user' %>

<h1>Add a New Image</h1>

<%= form_with scope: :image, local: true do |form| %>

<p>
  <%= form.label :name %>
  <%= form.text_field :name %>
</p>
<p>
  <%= form.label :category %>
  <%= form.text_field :category %>
</p>
<p>
  <%= form.label :order %>
  <%= form.text_field :order %>
</p>
<p>
  <%= form.label :file %>
  <%= form.file_field :file, multiple: false %>
</p>
<p>
  <%= form.submit %>
</p>

<% end %>
