<%= render "shared/menu" %>

<% if flash[:notice] %>
  <div class="notice admin-padding">
    <%= flash[:notice] %>
  </div>
<% end %>

<h1>Log in</h1>

<%= form_for @user, url: '/login', method: 'post' do |f| %>
  <p>
    Email
    <%= f.email_field :email %>
  </p>
  <p>
    Password
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit 'Log in' %>
  </p>
<% end %>
