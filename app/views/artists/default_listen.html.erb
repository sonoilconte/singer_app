<% title @artist.name %>
<%= render 'shared/logo' %>
<%= render 'shared/menu' %>

<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 text-frame media">
    <div class="page-header">Listen</div>
    <% if @artist %>
      <% if @artist.media %>
      <%= @artist.media.html_safe %>
      <% else %>
      <%= p 'Artist media not found' %>
      <% end %>
    <% else %>
    <div class="page-header">
      <%= p 'Artist not found'%>
    </div>
    <% end %>
  </div>
</div>

<%= render 'shared/footer' %>
