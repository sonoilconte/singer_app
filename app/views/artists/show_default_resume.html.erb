<%= render 'shared/logo' %>
<%= render 'shared/menu' %>

<% if @artist %>
<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 text-frame">
    <div class="page-header">Resume</div>
    <div style="max-width: 800px; height: 800px">
      <% if @artist.resume.attachment %>
      <object title="<%= @artist.name %>"
        type="application/pdf"
        data="<%= rails_blob_path(@artist.resume) %>"
        width="100%"
        height="100%"
        >
        <p>Link <a href="<%= rails_blob_path(@artist.resume) %>">to the PDF</a></p>
      </object>
      <% end %>
    </div>
  </div>
</div>


<% else %>
<h1>
  <%= p 'Artist not found'%>
</h1>
<% end %>

<%= render 'shared/footer' %>
